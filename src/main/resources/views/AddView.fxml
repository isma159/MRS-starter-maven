<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<TabPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mrs.GUI.Controller.AddViewController">
   <tabs>
      <Tab closable="false" text="Add">
         <content>
            <AnchorPane prefHeight="289.0" prefWidth="322.0">
               <children>
                  <TextField fx:id="txtFieldTitle" layoutX="87.0" layoutY="94.0" />
                  <TextField fx:id="txtFieldYear" layoutX="87.0" layoutY="156.0" />
                  <Label layoutX="87.0" layoutY="71.0" text="Title" />
                  <Label layoutX="87.0" layoutY="136.0" text="Release Year" />
                  <Button layoutX="128.0" layoutY="207.0" mnemonicParsing="false" onAction="#onAddBtnClick" prefHeight="25.0" prefWidth="67.0" text="Add" />
               </children>
            </AnchorPane>
         </content>
      </Tab>
      <Tab closable="false" onSelectionChanged="#onSelectionChangedEdit" text="Edit">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtFieldChosenMovie" disable="true" editable="false" layoutX="52.0" layoutY="33.0" prefHeight="25.0" prefWidth="219.0" />
                  <TextField fx:id="txtFieldTitleEdit" layoutX="52.0" layoutY="94.0" prefHeight="25.0" prefWidth="219.0" promptText="Title" />
                  <TextField fx:id="txtFieldYearEdit" layoutX="52.0" layoutY="156.0" prefHeight="25.0" prefWidth="219.0" promptText="Year" />
                  <Button layoutX="110.0" layoutY="207.0" mnemonicParsing="false" onAction="#onUpdateBtnClick" prefHeight="25.0" prefWidth="103.0" text="Update" />
                  <Label layoutX="52.0" layoutY="14.0" text="Chosen movie:" />
               </children>
            </AnchorPane>
        </content>
      </Tab>
      <Tab closable="false" onSelectionChanged="#onSelectionChangedEdit" text="Delete">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtFieldChosenMovie2" disable="true" editable="false" layoutX="52.0" layoutY="33.0" prefHeight="25.0" prefWidth="219.0" />
                  <Label layoutX="52.0" layoutY="14.0" text="Chosen movie:" />
                  <Button layoutX="102.0" layoutY="132.0" mnemonicParsing="false" onAction="#onDeleteBtnClick" prefHeight="25.0" prefWidth="120.0" text="DELETE" />
                  <Label layoutX="54.0" layoutY="210.0" text="WARNING: There will be no confirmation">
                     <textFill>
                        <LinearGradient cycleMethod="REPEAT" endX="1.0" endY="1.0">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="1.0" />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="0.2631579041481018" />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </textFill>
                  </Label>
               </children></AnchorPane>
        </content>
      </Tab>
   </tabs>
</TabPane>
